extends layout

block content
  h1 게시글 수정
  form(action=`/edit/${post.id}?_method=PUT`, method='post')
    label(for='title') 제목:
    input(type='text', id='title', name='title', value=post.title, required=true)
    label(for='content') 내용:
    textarea(id='content', name='content', rows='5', required=true) #{post.content}
    button(type='submit') 수정