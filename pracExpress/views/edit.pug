extends layout

block content
  h2 게시글 수정
  form(action=`/edit/${post.id}?_method=PUT`, method='post')
    .form-group
      label(for='title') 제목
      input(type='text', id='title', name='title', value=post.title, required=true)
    .form-group
      label(for='content') 내용
      textarea(id='content', name='content', required=true) #{post.content}
    .actions
      button(type='submit', class='btn') 수정
      a(href='/', class='btn') 취소